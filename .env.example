# Environment Variables
NEWS_API_KEY=your_news_api_key_here

# Select AI Provider: 'grok' or 'gemini'
AI_PROVIDER=gemini

#  AI Provider - Grok
GROK_API_KEY=your_xai_api_key_here
GROK_MODEL=grok-3-latest
GROK_IMAGE_MODEL=grok-2-image
GROK_SENTIMENT_MAX_TOKENS=10
GROK_SUMMARY_MAX_TOKENS=100
GROK_IMAGE_PROMPT_MAX_TOKENS=150

# For Grok-4, uncomment and use these values instead:
# GROK_SENTIMENT_MAX_TOKENS=800
# GROK_SUMMARY_MAX_TOKENS=1000
# GROK_IMAGE_PROMPT_MAX_TOKENS=1200

#  AI Provider - Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
GEMINI_SENTIMENT_MAX_TOKENS=100
GEMINI_SUMMARY_MAX_TOKENS=300
GEMINI_IMAGE_PROMPT_MAX_TOKENS=300
GEMINI_OPINION_MAX_TOKENS=2000

PORT=3001
NODE_ENV=development

# Azure Storage Configuration
# Used for storing data files in Azure Blob Storage as alternative to local filesystem
# This allows accessing data from cloud storage when SMB port 445 is blocked
AZURE_STORAGE_ENABLED=false
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONTAINER_NAME=data
